<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".About">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:background="@color/white"
            android:textSize="16sp"
            android:fontFamily="serif"
            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="This App is all about to have a quick access to all the companies which are located in Visakhapatnam. "/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/text1"
            android:background="@color/white"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:padding="4dp"
            android:id="@+id/text2"
            android:text="You can easily navigate through our App."/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:textSize="16sp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:fontFamily="serif"
            android:layout_margin="10dp"
            android:padding="4dp"
            android:text="If you have any Queries or Suggestions regarding app, feel free to ask. ThankYou"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/clickhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:text="Click Here"
        android:textColor="@color/black"
        android:fontFamily="serif"/>



    <LinearLayout
        android:id="@+id/connect"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTintMode="@color/white"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="connect to me"
            android:fontFamily="serif"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center" />


        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/facebook"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/fblogo"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>


            <Button
                android:id="@+id/instagram"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/insta1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="45dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>


            <Button
                android:id="@+id/linkedin"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/linkedin"
                android:layout_marginTop="15dp"
                android:layout_marginStart="45dp"
                style="@style/Widget.AppCompat.Button.Borderless"/>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>